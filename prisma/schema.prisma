datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_MSSQL_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

model Adm {
  id          String        @id @default(cuid())
  email       String        @unique
  name        String?
  password    String
  lider       Lider[]
  colaborador Colaborador[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Colaborador {
  id              String    @id @default(cuid())
  nome            String
  endereco        String
  telefone        String
  email           String    @unique
  profissao       String
  escolaridade    String
  redesSociais    String
  localVotacao    String
  dataNascimento  DateTime
  rg              String    @unique
  orgaoExpedidor  String
  cpf             String    @unique
  tituloEleitor   String
  zona            String
  secao           String
  recebeBeneficio Boolean
  faixaSalarial   String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  Adm             Adm?      @relation(fields: [admId], references: [id], onUpdate: NoAction, onDelete: NoAction)
  admId           String?
  liderId         String?
}

model Lider {
  id              String    @id @default(cuid())
  nome            String
  endereco        String
  telefone        String
  email           String
  profissao       String
  escolaridade    String
  redesSociais    String
  localVotacao    String
  dataNascimento  DateTime
  rg              String
  orgaoExpedidor  String
  cpf             String
  tituloEleitor   String
  zona            String
  secao           String
  recebeBeneficio Boolean
  faixaSalarial   String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  deletedAt       DateTime?
  Adm             Adm?      @relation(fields: [admId], references: [id])
  admId           String?
}
